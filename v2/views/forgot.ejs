<%- include("./partials/header") %>
        <link rel="stylesheet" href="/stylesheets/forgot.css">
  </head>
  <body>
		  <div id = "main-div" class="card text-center">
				  <div id = "card" class="card-body">
					  	<form action = "/forgot" method = "POST">
					   			<h1 id = "signIn" class="card-title">Trouble Logging In?</h1>
					        <hr>
					        <small>Enter the Email Address with which you</small>
					        <div>
					            <small>registered your account.</small>
					        </div>
					        <p class="card-text">
							      	<div class="input-group mb-3">
								          <div class="input-group-prepend" style = "margin-bottom: 15px;">
										          <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope" style ="font-size: 24px;"></i></span>
										      </div>
										      <input type="text" class="form-control" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1" name = "email" required>
									    </div>
									    <div class="form-group" style = "margin-bottom: 35px;">
										      <input type="submit" class="btn btn-primary" value="Send Reset Password Link">
									    </div>
									    <div id = "or">
										      <span style="font-size: 15px; background-color: white; padding: 0 10px; margin-top: 20px;">
										       OR
										      </span>
								 	    </div>
									    <div style = "margin-top: 30px;">
										      <a href="/register" style = "color: black"> Create New Account</a>
									    </div>
					        </p>
					   	</form>
				  </div>
          </div>
          
<%- include("./partials/footer") %>