<html>

<head>
    <title>setitup!</title>
    <!-- botstrap/4.5 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- font awesme/5.12 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <!-- google fonts -->
    <!-- pacifico-->
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <!-- balsamiqSans -->
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&display=swap" rel="stylesheet">
    <!-- local navbar stylesheet -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/navbar.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/footer.css">

</head>

<body>
    <nav id="font" class="navbar navbar-expand-lg navbar-dark" style="background-color: black; z-index: 1;">
        <a class="navbar-brand" href="#">
            <i class="fa fa-venus-mars biggy" aria-hidden="true"></i>
            <span class="biggy">Setitup</span>
        </a>

        <!-- collapse button -->
        <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <div class="navbar-toggler-icon"><span></span><span></span><span></span></div>
        </button>
        <!-- !collapse button -->

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
           <% if(currentUser) { %>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#"><i class="fas fa-compass"></i>Discover <span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#"><i class="fas fa-heart"></i>Likes <span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#"><i class="fas fa-bookmark"></i>Saved <span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#"><i class="fas fa-comment-alt"></i>Chat</a>
                </li>
            </ul>
            <!-- right end -->
            <ul class="navbar-nav ml-auto">
                <!-- dropdown -->
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="far fa-user-circle biggy"></i><span class="drp">User</span>
                    </a>
                    <div id="drp" class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#"><i class="far fa-user"></i>Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><i
                                class="fas fa-user-cog"></i>Settings</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><i class="fas fa-life-ring"></i>Help</a>
                    </div>
                </li>
                <% } else { %>
                <a class="nav-link active" href="/login"><i class="fas fa-sign-in-alt"></i>Login</a>
                <a class="nav-link active" href="/getting-started"><i class="fas fa-user-plus"></i>Signup</a>
                <% } %>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <% if(error && error.length > 0 ) { %>
        <div class="row d-flex justify-content-between m-2">
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 100%;">
                <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <% } %>
        <% if(success && success.length > 0 ) { %>
        <div class="row d-flex justify-content-between m-2">
            <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 100%;">
                <%= success %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        
        <% } %>
    </div>